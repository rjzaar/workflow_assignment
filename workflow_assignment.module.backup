<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * @file
 * Primary module hooks for Workflow Assignment module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Access\AccessResult;
use Drupal\Core\Session\AccountInterface;
use Drupal\node\NodeInterface;

/**
 * Implements hook_help().
 */
function workflow_assignment_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.workflow_assignment':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Workflow Assignment module provides a flexible workflow system where each workflow can be assigned to a single user, group, or destination location.') . '</p>';
      $output .= '<h3>' . t('Features') . '</h3>';
      $output .= '<ul>';
      $output .= '<li>' . t('Single assignment per workflow (user, group, or destination)') . '</li>';
      $output .= '<li>' . t('Color-coded assignments: Green for users, Blue for groups, Orange for destinations') . '</li>';
      $output .= '<li>' . t('Expandable description and comments fields') . '</li>';
      $output .= '<li>' . t('Separate Workflow tab on content pages') . '</li>';
      $output .= '<li>' . t('Quick edit functionality') . '</li>';
      $output .= '</ul>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function workflow_assignment_theme() {
  return [
    'workflow_info_block' => [
      'variables' => [
        'workflow' => NULL,
        'node' => NULL,
      ],
    ],
    'workflow_tab_content' => [
      'variables' => [
        'workflow' => NULL,
        'node' => NULL,
        'can_edit' => FALSE,
      ],
    ],
  ];
}

/**
 * Implements hook_node_access().
 *
 * Custom access check for workflow tab visibility.
 */
function workflow_assignment_node_access(NodeInterface $node, $op, AccountInterface $account) {
  // No opinion on node access.
  return AccessResult::neutral();
}

/**
 * Custom access callback for workflow tab.
 */
function workflow_assignment_node_has_workflow_field(NodeInterface $node) {
  $config = \Drupal::config('workflow_assignment.settings');
  $enabled_types = $config->get('enabled_content_types') ?: [];
  
  // Check if this content type is enabled for workflows.
  if (in_array($node->bundle(), $enabled_types)) {
    return AccessResult::allowed();
  }
  
  return AccessResult::forbidden();
}

/**
 * Implements hook_entity_operation().
 */
function workflow_assignment_entity_operation(EntityInterface $entity) {
  $operations = [];
  
  if ($entity->getEntityTypeId() === 'workflow_list') {
    $operations['quick_edit'] = [
      'title' => t('Quick Edit'),
      'url' => \Drupal\Core\Url::fromRoute('workflow_assignment.quick_edit', [
        'workflow_list' => $entity->id(),
      ]),
      'weight' => 10,
    ];
  }
  
  return $operations;
}

/**
 * Implements hook_entity_type_alter().
 */
function workflow_assignment_entity_type_alter(array &$entity_types) {
  // Add route provider for workflow_list entity.
  if (isset($entity_types['workflow_list'])) {
    $entity_types['workflow_list']->setLinkTemplate('collection', '/admin/structure/workflow-list');
    $entity_types['workflow_list']->setLinkTemplate('add-form', '/admin/structure/workflow-list/add');
    $entity_types['workflow_list']->setLinkTemplate('edit-form', '/admin/structure/workflow-list/{workflow_list}/edit');
    $entity_types['workflow_list']->setLinkTemplate('delete-form', '/admin/structure/workflow-list/{workflow_list}/delete');
  }
}

/**
 * Implements hook_form_BASE_FORM_ID_alter() for node_form.
 * 
 * Filters out unchecked checkbox values (0) from workflow field
 * before they reach field validation.
 */
function workflow_assignment_form_node_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  // Only process if the node has the workflow field
  if (isset($form['field_workflow_list'])) {
    // Add our custom validation handler to filter zero values
    array_unshift($form['#validate'], 'workflow_assignment_node_form_validate');
  }
}

/**
 * Custom validation handler to filter out zero values from workflow field.
 * 
 * Checkboxes return 0 for unchecked items, but entity reference fields
 * expect only valid entity IDs. This filters out the zeros before validation.
 */
function workflow_assignment_node_form_validate(&$form, FormStateInterface $form_state) {
  // Get the current workflow field values
  $workflow_values = $form_state->getValue('field_workflow_list');
  
  // Only process if we have values
  if (!empty($workflow_values) && is_array($workflow_values)) {
    $filtered = [];
    
    // Loop through all submitted values
    foreach ($workflow_values as $delta => $value) {
      // Skip non-numeric deltas (like 'add_more' button)
      if (!is_numeric($delta)) {
        continue;
      }
      
      // Extract the target_id
      if (is_array($value) && isset($value['target_id'])) {
        $target_id = $value['target_id'];
      }
      elseif (!is_array($value)) {
        $target_id = $value;
      }
      else {
        // No target_id found, skip this value
        continue;
      }
      
      // Filter: Keep only valid entity IDs
      // Reject: 0, '0', '', NULL, FALSE (all represent unchecked boxes)
      if ($target_id !== 0 && 
          $target_id !== '0' && 
          $target_id !== '' && 
          $target_id !== NULL && 
          $target_id !== FALSE &&
          !empty($target_id)) {
        
        // Keep this value
        $filtered[] = is_array($value) ? $value : ['target_id' => $target_id];
      }
    }
    
    // Set the filtered values back to form state
    // This happens before field validation, so only valid IDs are validated
    $form_state->setValue('field_workflow_list', $filtered);
  }
}
